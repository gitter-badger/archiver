<div class="pure-g">
  <div class="pure-u-1-3"></div>
  <div class="pure-u-1-3">
    <form class="pure-form pure-form-stacked" action="/signin" method="POST">
      <fieldset>
        <legend>Sign In or Sign Up</legend>
        {{#if signin_error}}
        <div class="flash-message flash-message-error">
          {{signin_error}}
        </div>
        {{/if}}
        <input class="pure-input-1" type="email" name="email" placeholder="Email" required>
        <input class="pure-input-1" type="password" name="password" placeholder="Password" required>
        <div class="signin-buttons">
          <button type="submit" class="pure-button pure-button-primary" name="action" value="signin">Sign In</button>
          <span class="signin-or">&nbsp;or&nbsp;</span>
          <button type="submit" class="pure-button pure-button-secondary" name="action" value="signup">Sign Up</button>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="pure-u-1-3"></div>
</div>
